{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-eslint-rules"
    ],
    "jsRules": {},
    "rules": {
        "align": false,
        "array-type": [ false, "always" ],
        "arrow-parens": true,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "eofline": false,
        "forin": true,
        "indent": [ true, "spaces", 4 ],  // Currently a Bug https://github.com/palantir/tslint/issues/2814
        "interface-name": [ true, "never-prefix" ],
        "jsdoc-format": true,
        "jsx-boolean-value": [ true, "never" ],
        "jsx-curly-spacing": [ true, "always" ],
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "label-position": true,
        "max-line-length": [ true, 120 ],
        "member-access": [ true, "no-public" ],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-any": false,
        "no-arg": true,
        "no-bitwise": true,
        "no-consecutive-blank-lines": [ true, 2 ],
        "no-console": [
            true,
            "log",
            "error",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-constant-condition": "error",
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": [ true, "allow-empty-catch" ],
        "no-eval": true,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-use-before-declare": true,
        "object-literal-sort-keys": false,
        "one-line": false,
        "ordered-imports": false,
        "quotemark": [ true, "single", "jsx-single" ],
        "radix": true,
        "semicolon": [ true, "always" ],
        "space-in-parens": [ true, "always", { "exceptions": [ "empty" ] } ],
        "space-within-parens": false,
        "object-curly-spacing": [ true, "always" ],
        "array-bracket-spacing": [ true, "always" ],
        "switch-default": true,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "never"
                }
            }
        ],
        "triple-equals": [ true, "allow-null-check" ],
        "typedef": [ true, "parameter", "property-declaration" ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "variable-name": [ true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case" ]
    },
    "rulesDirectory": []
}
